<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Oigo"
             x:Class="Oigo.HelpCustomization">
    <ContentPage.Content>
        <StackLayout>
            <Button Clicked="Button_Clicked"  Text="+" Margin="5"></Button>
            <ListView x:Name="listView" ItemsSource="{x:Static local:HelpCustomization.items}" ItemTapped="ItemSelected" Margin="5">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="Delete_Clicked" IsDestructive="True" CommandParameter="{Binding .}" Text="Delete"></MenuItem>
                            </ViewCell.ContextActions>
                            <StackLayout Padding="15.0" BackgroundColor="White">
                                <Label Text="{Binding .}" TextColor="Black"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>